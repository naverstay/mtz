                        span.i-close.fz_18
                    
                    .product_order_info.orderInfo
                      .product_order_row
                        .product_order_col_1
                          .product_order_param
                            span.fz_24.ff_din.let-_058 820
                          .product_order_label
                            span.fz_12.let_08 Диаметр, Dн (мм)
                            
                        .product_order_col_3
